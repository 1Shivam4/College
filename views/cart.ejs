<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cart</title>
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/app.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <div class="wrapper">
      <%- include("partials/header.ejs") %>
      <div class="container">
        <div class="cart-heading">
          <h2>Shopping Cart</h2>
        </div>
        <form id="cart-form" class="flex">
          <% data.forEach((e,index)=>{ %>

          <div class="cart-form-element grid">
            <div class="cart-element-select flex">
              <input type="checkbox" name="ele" id="ele" />
              <label for="ele" class="cart-img">
                <img
                  src="/img/<%= e.imageCover %>.jpg"
                  alt="image_<%= index %>"
              /></label>
            </div>
            <div class="cart-element-des">
              <h2><%= e.name %></h2>
              <h3>Brand : -</h3>
              <hr />
              <div class="cart-element-sizes flex">
                <h3>Sizes :-</h3>
                <div class="size-details">
                  <input type="checkbox" name="first" id="first" />
                  <label for="first">200 grams</label>
                </div>

                <div class="size-details flex">
                  <input type="checkbox" name="second" id="second" />
                  <label for="second">400grams</label>
                </div>
                <div class="size-details flex">
                  <input type="checkbox" name="third" id="third" />
                  <label for="third">500grams</label>
                </div>
              </div>

              <div class="quantity flex">
                <h3>Quantity:</h3>
                <div class="quantity-box flex">
                  <input
                    type="button"
                    class="quantity-button decrease"
                    value="-"
                  />
                  <input
                    id="quantity-input"
                    class="quantity-input"
                    type="text"
                    value="1"
                    min="0"
                    max="100"
                  />
                  <input
                    type="button"
                    value="+"
                    class="quantity-button increase"
                  />
                </div>
              </div>

              <div class="rating flex">
                <p><%= e.ratingAverage %></p>
                <div class="star-rating">
                  <% [1,2,3,4,5].forEach(function(star){ %>
                  <i
                    class="fa-solid fa-star <%= e.ratingAverage >= star ? 'active' :'inactive' %>"
                  ></i>

                  <% }) %>
                </div>
              </div>
            </div>
            <div class="price">
              <h3>&#x20B9; <span id="price-display">100 </span></h3>
            </div>
          </div>

          <% })%>
        </form>
      </div>
    </div>
    <script src="/js/functionality/priceControl.js"></script>
  </body>
</html>
