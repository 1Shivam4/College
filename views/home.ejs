      <main id="main">
        <section class="product" id="product-section-container">
          <div class="container flex">
            <div class="product-section flex">
              <h2 class="product-head">Products</h2>
              <a href="#" class="show-more">Show More >></a>
            </div>

            <div class="product-container grid">

<% data.forEach(e=>{ %>
              <div class="product-item">
                <div class="product-details">
                  <div class="product-cart">
                
                    <a href="/product/<%= e.slug %>/<%= e._id %>" class="cart"><svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="22"
                      height="22  "
                      fill="currentColor"
                      class="bi bi-cart4"
                      viewBox="0 0 16 16"
                    >
                      <path
                        d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0"
                      />
                    </svg></a>
                  </div>
                  <div class="product-img">
                    <a href="/product/<%= e.slug %>">
                      <img src="/img<%= e.imageCover %>.jpg" alt="<%= e.imageCover %>"
                    /></a>
                  </div>
                  <div class="product-text-details">
                    <div class="product-name">
                      <a href="/product/<%= e.slug %>"><%= e.name %></a>
                    </div>

                    <div class="product-rating flex">
                      <p><%= e.ratingAverage %></p>
                      <div class="star-rating">
                        <% [1,2,3,4,5].forEach(function(star){  %>
                          <i class="fa-solid fa-star <%= e.ratingAverage >= star ? 'active' :'inactive' %>"></i>
                         
                      <%  }) %>
                      </div>
                  </div>
                  
                  </div>
                </div>
              </div>
          <%  }) %>


            </div>
          </div>
        </section>
      </main>

